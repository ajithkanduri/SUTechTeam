<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFFFFF">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/bitslogo" />
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below = "@id/imageView"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">
        <ImageView
            android:id="@+id/imvusericon1"
            android:layout_height="45dp"
            android:layout_width="45dp"
            android:background="#26A69A"
            android:padding="8dp"
            android:tint="#FFFFFF"
            android:src="@drawable/ic_user"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imvusericon1"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imvusericon1"
            android:hint="USER NAME"
            android:textSize="15sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/rl1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        >
        <ImageView
            android:id="@+id/imvusericon"
            android:layout_height="45dp"
            android:layout_width="45dp"
            android:background="#26A69A"
            android:padding="8dp"
            android:tint="#FFFFFF"
            android:src="@drawable/ic_pswrd"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imvusericon"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imvusericon"
            android:hint="PASSWORD"
            android:inputType="textPassword"

            android:textSize="15sp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
       android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="215dp"
        android:background="@drawable/rounded_button"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googlebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="156dp">

    </com.google.android.gms.common.SignInButton>


</RelativeLayout>